{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "types",
    "__tests__/**/*"
  ]
}
